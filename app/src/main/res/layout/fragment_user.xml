<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgrandGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgrandGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorGray"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/colorTextBack"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <LinearLayout
            android:id="@+id/user_button_line"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bbtn"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_image_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:id="@+id/username"
                android:text="登录 / 注册"
                android:textColor="@color/colorTextBack"
                android:maxLength="10"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/bbtn"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/myartile_button_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/myarticle"
                    android:gravity="center|left"
                    android:text="    我的帖子"
                    android:textColor="@color/colorTextBack"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/myarticle_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/arrow"
                android:text="0"
                android:textColor="@color/colorXiaomeetingGray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/bbtn"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/label_button_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/label"
                    android:gravity="center|left"
                    android:text="    收藏"
                    android:textColor="@color/colorTextBack"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/label_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/arrow1"
                android:text="0"
                android:textColor="@color/colorXiaomeetingGray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/bbtn"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/history_button_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/history"
                    android:gravity="center|left"
                    android:text="    我的足迹"
                    android:textColor="@color/colorTextBack"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bbtn"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/feedback_button_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/feedback"
                android:gravity="center|left"
                android:text="    意见反馈"
                android:textColor="@color/colorTextBack"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bbtn"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/setting_button_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/setting"
                android:gravity="center|left"
                android:text="    设置"
                android:textColor="@color/colorTextBack"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/other_fragment_framelayout" />
</RelativeLayout>