<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/fl_content" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <com.chaychan.library.BottomBarLayout
            android:id="@+id/bbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center"
            android:background="@color/white">

            <com.chaychan.library.BottomBarItem
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:iconNormal="@drawable/home"
                app:iconSelected="@drawable/home1"
                app:itemText="沸点"
                app:textColorNormal="@color/colorXiaomeetingGray"
                app:textColorSelected="@color/colorXiaoMeetingBlue"
                app:itemTextSize="10sp"
                app:itemMarginTop="3dp"
                app:iconHeight="24dp"
                app:iconWidth="24dp" />

            <com.chaychan.library.BottomBarItem
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:iconNormal="@drawable/yue"
                app:iconSelected="@drawable/yue1"
                app:itemText="约"
                app:textColorNormal="@color/colorXiaomeetingGray"
                app:textColorSelected="@color/colorXiaoMeetingBlue"
                app:itemTextSize="10sp"
                app:itemMarginTop="3dp"
                app:iconHeight="24dp"
                app:iconWidth="24dp" />


            <com.chaychan.library.BottomBarItem
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:iconNormal="@drawable/user"
                app:iconSelected="@drawable/user1"
                app:itemText="我"
                app:textColorNormal="@color/colorXiaomeetingGray"
                app:textColorSelected="@color/colorXiaoMeetingBlue"
                app:itemTextSize="10sp"
                app:itemMarginTop="3dp"
                app:iconHeight="24dp"
                app:iconWidth="24dp" />


        </com.chaychan.library.BottomBarLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_other" />
</RelativeLayout>
