<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrandGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:text="修改资料"
                android:textColor="@color/colorTextBack"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:id="@+id/setting_head_image"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="头像"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_image_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/head"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_user_name"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="昵称"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="昵称"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_sex"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="xxx"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_phone"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="手机"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="177xxxxxxxx"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_email"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="邮件"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="xxxxxxxx@xxx.com"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_school"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="学校"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_school_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="xxx"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:id="@+id/setting_leader_status"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Leader"
                android:textColor="@color/colorTextBack"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/setting_leader_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="否"
                android:textColor="@color/colorGrayText"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="保存"
        android:textColor="@color/white"
        android:background="@color/colorXiaoMeetingBlue"
        android:id="@+id/save_info_button"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:id="@+id/bookloading_line_save"
        android:orientation="vertical">

        <com.victor.loading.book.BookLoading
            android:id="@+id/bookloading_sec"
            android:layout_width="110dp"
            android:layout_height="85dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="加载中..."
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>